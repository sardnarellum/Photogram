@using Photogram.WebApp.Models
@using PagedList.Mvc
@using Resources

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    var pagerOptions = new PagedListRenderOptions
    {
        DisplayLinkToIndividualPages = false,
        Display = PagedListDisplayMode.IfNeeded
    };
}


@model ProjectDetailsModel

<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll" href="@Url.Action("Index", "Home")">
                <span class="brand">Müller</span> <span class="light">András</span>
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
            <ul class="nav navbar-nav">
                <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink(Localization.Administration, "Index", "Admin")
                    </li>
                }
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<section class="container project-section">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <h1>@Model.Title</h1>
            <p>@Model.Description</p>
        </div>
    </div>
    <div class="project-itemlist row">
        @foreach (var elem in Model.IncludedMedia)
        {
            <div class="project-item-container fit-container col-lg-10 col-lg-offset-1">
                <img class="fit-container" src="@Url.Action("Render", "Image", new { file = elem.FileName })/" />
                @if (!string.IsNullOrEmpty(elem.CurrentTitleText()))
            {
                    <h6>@elem.CurrentTitleText()</h6>
                }
                @if (!string.IsNullOrEmpty(elem.CurrentDescriptionText()))
            {
                    <p>@elem.CurrentDescriptionText()</p>
                }
            </div>
        }
    </div>
    <div class="row pager">
        @Html.PagedListPager(Model.IncludedMedia,
            page => Url.Action("Details", "Project", new { projectId = Model.Id, page = page }),
            pagerOptions)
    </div>
</section>
