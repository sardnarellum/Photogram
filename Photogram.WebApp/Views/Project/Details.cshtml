<div class="container">
    <div class="row">
        <div class="col-lg-10 col-md-8 col-md-offset-1" role="main">
            <section class="project-section text-center">
                <article class="row project-data">
                    <h1>@Model.CurrentTitleText()</h1>
                    <p>@Model.CurrentDescriptionText()</p>
                </article>
                @foreach (var elem in Model.ProjectInclude)
                {
                    <article class="row project-item">
                        <div class="content-row">
                            <img class="fit-container" src="@Url.Action("Render", "Image", new { file = elem.Media.FileName })/" />
                            @if (!string.IsNullOrEmpty(elem.Media.CurrentTitleText()))
                            {
                                <h6>@elem.Media.CurrentTitleText()</h6>
                            }
                            @if (!string.IsNullOrEmpty(elem.Media.CurrentDescriptionText()))
                            {
                                <p>@elem.Media.CurrentDescriptionText()</p>
                            }
                        </div>
                    </article>
                }
            </section>
            <section class="content-section text-center">
                @Html.ActionLink(Localization.Back, "Index", "Home", new { }, new { @class = "btn btn-default btn-lg" })
            </section>
        </div>
        <div class="col-lg-2 col-md-1" role="main">
            <nav class="hidden-print hidden-sm hidden-xs">
                <ul class="nav nav-pills nav-stacked project-sidebar">

                </ul>
            </nav>
        </div>
    </div>
</div>