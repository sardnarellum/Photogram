@using Resources
@using Photogram.WebApp.Models

@model ContactModel

@{
    Layout = null;
}
<section id="contact" class="row row-fullpage text-center">
    <div class="row-middle-content">
        <div class="col-xs-12 info-container b-lazy"    
             src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="         
             data-src="@Url.Content(string.Concat(Common.UploadPathImgRel, Model.Background.FileName, "?width={w}&height={h}&mode=crop&s.brightness=-0.05"))">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2 class="wide-spacing">@Localization.Contact</h2>
                    <p>@Model.Lead</p>
                    <p>
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <p>
                            <abbr title="Phone">P:</abbr> @Model.Phone
                        </p>
                    }
                    <ul class="list-inline banner-buttons">
                        @if (!string.IsNullOrEmpty(Model.FacebookURL))
                        {
                            <li>
                                <a href="@Model.FacebookURL" target="_blank" class="btn btn-default btn-lg"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.GitHubURL))
                        {
                            <li>
                                <a href="@Model.GitHubURL" target="_blank" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.InstagramURL))
                        {
                            <li>
                                <a href="@Model.InstagramURL" target="_blank" class="btn btn-default btn-lg"><i class="fa fa-instagram fa-fw"></i> <span class="network-name">Instagram</span></a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.LinkedInURL))
                        {
                            <li>
                                <a href="@Model.LinkedInURL" target="_blank" class="btn btn-default btn-lg"><i class="fa fa-linkedin fa-fw"></i> <span class="network-name">LinkedIn</span></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>